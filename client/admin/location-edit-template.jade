form.form-horizontal
  .form-group
    label.col-sm-4.control-label Name
    .col-sm-8
      input.form-control(type="text", ng-model="EditCtrl.location.name")

  .form-group
    label.col-sm-4.control-label Address
    .col-sm-8
      .input-group
        input.form-control(type="text", ng-model="EditCtrl.location.address")
        .input-group-btn
          button.btn.btn-default(ng-click="EditCtrl.lookup(EditCtrl.location.address)") Lookup



  .form-group
    label.col-sm-4.control-label Description
    .col-sm-8
      input.form-control(type="text", ng-model="EditCtrl.location.description")

  .form-group
    label.col-sm-4.control-label Longitude
    .col-sm-8
      input.form-control(type="text", ng-model="EditCtrl.location.coords[0]")

  .form-group
    label.col-sm-4.control-label Latitude
    .col-sm-8
      input.form-control(type="text", ng-model="EditCtrl.location.coords[1]")

  hr

  .form-group
    .col-sm-8.col-sm-offset-4
      a(ui-sref="^").btn.btn-default Cancel
      button.btn.btn-primary(ng-click="EditCtrl.save()") Save
