extends ../templates/splash

block content
  .row
    .col-sm-8.col-sm-offset-2
      form.form-horizontal
        .form-group
          label.col-sm-4.control-label E-Mail
          .col-sm-8
            input.form-control(type="email", ng-model="credentials.email")
        .form-group
          label.col-sm-4.control-label Password
          .col-sm-8
            input.form-control(type="password", ng-model="credentials.password")
        .form-group
          .col-sm-offset-4.col-sm-8
            button.btn.btn-primary(ng-click="UserCtrl.login(credentials)") Sign In

      p Don't have an account yet? Its awesome! <a ui-sref="user.register">Sign up</a> for free and meet amazing people all around the world.
