extends ../../templates/splash
block content
  .row
    .col-sm-8.col-sm-offset-2
      form.form-horizontal
        .form-group
          label.col-sm-4.control-label E-Mail
          .col-sm-8
            input.form-control(type="email", ng-model="RegisterCtrl.data.email")
        .form-group
          label.col-sm-4.control-label Password
          .col-sm-8
            input.form-control(type="password", ng-model="RegisterCtrl.data.password")
        .form-group
          label.col-sm-4.control-label Repeat Password
          .col-sm-8
            input.form-control(type="password", ng-model="RegisterCtrl.data.passwordRepeat")
        .form-group
          .col-sm-offset-4.col-sm-8

            button.btn.btn-primary(ng-click="RegisterCtrl.register()") Register

      p You've already signed up? To sign in click <a ui-sref="user.login">here</a>!
